#!/usr/bin/env python

import sys
import nltk
import json

input = ' '.join(sys.argv[1:]) 
text = nltk.word_tokenize("%s" % input)
taggedSent = nltk.pos_tag(text)
output = ''
wnl = nltk.stem.WordNetLemmatizer()
for word, pos in taggedSent:
  word = wnl.lemmatize(word)
  if pos.startswith('N'):
    output += word + ','
  else:
    output += word + ' '
print output[:-1]

